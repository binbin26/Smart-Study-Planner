<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".SmartPlannerApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartStudyPlanner"
        tools:targetApi="31">

        <!-- ==================== LOGIN SCREEN (LAUNCHER) ==================== -->

        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartStudyPlanner"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ==================== MAIN SCREENS ==================== -->

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartStudyPlanner" />

        <!-- Home Activity -->
        <activity
            android:name=".view.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartStudyPlanner" />

        <!-- Stats Activity (Jetpack Compose) -->
        <activity
            android:name=".ui.StatsActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartStudyPlanner" />

        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:label="Cài đặt"
            android:theme="@style/Theme.SmartStudyPlanner" />
        <!-- ==================== TASK MANAGEMENT ==================== -->

        <!-- Add Task Activity -->
        <activity
            android:name=".ui.AddTaskActivity"
            android:exported="false"
            android:label="Thêm Task Mới"
            android:theme="@style/Theme.SmartStudyPlanner"
            android:windowSoftInputMode="adjustPan" />

        <!-- Task List Activity -->
        <activity
            android:name=".ui.TaskListActivity"
            android:exported="false"
            android:label="Danh Sách Task"
            android:theme="@style/Theme.SmartStudyPlanner"
            android:windowSoftInputMode="adjustPan" />

        <!-- Task Detail Activity -->
        <activity
            android:name=".ui.screen.TaskDetailActivity"
            android:exported="false"
            android:label="Chi Tiết Task"
            android:theme="@style/Theme.SmartStudyPlanner" />

        <!-- ==================== SUBJECT MANAGEMENT ==================== -->

        <!-- Subject List Activity -->
        <activity
            android:name=".ui.screen.SubjectListActivity"
            android:exported="false"
            android:label="Quản lý Môn học"
            android:theme="@style/Theme.SmartStudyPlanner" />

        <!-- Add/Edit Subject Activity -->
        <activity
            android:name=".ui.screen.AddEditSubjectActivity"
            android:exported="false"
            android:label="Thêm/Sửa Môn học"
            android:theme="@style/Theme.SmartStudyPlanner"
            android:windowSoftInputMode="adjustResize" />

        <!-- ==================== NOTIFICATIONS ==================== -->

        <!-- Task Reminder Receiver -->
        <receiver
            android:name=".notification.TaskReminderReceiver"
            android:exported="false"
            android:enabled="true" />

    </application>

</manifest>
