<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".SmartPlannerApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartStudyPlanner">

        <!-- Main screen -->
        <activity
            android:name="smart.planner.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartStudyPlanner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add Task Activity -->
        <activity
            android:name="smart.planner.ui.AddTaskActivity"
            android:exported="false"
            android:label="Thêm Task Mới"
            android:theme="@style/Theme.SmartStudyPlanner"
            android:windowSoftInputMode="adjustPan"/>

        <!-- Check Task Activity -->
        <activity
            android:name="smart.planner.ui.TaskListActivity"
            android:exported="false"
            android:label="Kiểm tra Task"
            android:theme="@style/Theme.SmartStudyPlanner"
            android:windowSoftInputMode="adjustPan"/>

        <!-- Task Detail Activity -->
        <activity
            android:name=".ui.screen.TaskDetailActivity"
            android:exported="false" />

        <!-- Home Activity -->
        <activity
            android:name=".view.HomeActivity"
            android:exported="true" />

        <!-- Stats screen -->
        <activity
            android:name=".ui.StatsActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartStudyPlanner" />

        <!-- Notification receiver -->
        <receiver
            android:name=".notification.TaskReminderReceiver"
            android:exported="false" />

    </application>

</manifest>
